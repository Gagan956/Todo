{
  "compilerOptions": {
    // Paths
    "rootDir": "./src",
    "outDir": "./dist",

    // Node ESM support
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Target modern JS
    "target": "ES2020",
    "lib": ["ES2020"],

    // Allow Node imports
    "types": ["node"],

    // Build options
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Strict mode
    "strict": true,
    "skipLibCheck": true,

    // Good defaults
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
